{
  "manifest_version": 2,

  "name": "Coolest Weather Extension",
  "description": "This is a cool Weather Extension by DynamicRemo, requires your current location only.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "geolocation",
    "https://ajax.googleapis.com/",
    "http://api.openweathermap.org/data/2.5/weather/"
  ]
}
